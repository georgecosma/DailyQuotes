<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_dark"
    tools:context="com.example.gcosma.dailyquotes.SettingsActivity">

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayoutInner"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#5C979F"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/tvSettingsTitle" />

    <RelativeLayout
        android:id="@+id/relativeLayoutInner"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Switch
            android:id="@+id/swEnableQuotesNotifications"
            android:text="Enable quote notifications          "
            android:textSize="17dp"

            android:textStyle="bold"
            android:textColor="#5C979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:theme="@style/mySwitch"/>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:height="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:id="@+id/textView3" />

        <TextView
            android:text="Check which categories should notify"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#5C979F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/tvCheckListLabel"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:text="Inspire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCheckListLabel"
            android:layout_alignLeft="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="40dp"
            android:id="@+id/chkInspire" />

        <CheckBox
            android:text="Management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkManagement"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/chkInspire"
            android:layout_alignLeft="@+id/chkInspire"
            android:layout_alignStart="@+id/chkInspire" />

        <CheckBox
            android:text="Life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/chkLife"
            android:layout_below="@+id/chkManagement"
            android:layout_alignLeft="@+id/chkManagement"
            android:layout_alignStart="@+id/chkManagement" />

        <CheckBox
            android:text="Sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/chkSports"
            android:layout_below="@+id/chkLife"
            android:layout_alignLeft="@+id/chkLife"
             />

        <CheckBox
            android:text="Funny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkFunny"
            android:layout_alignBaseline="@+id/chkInspire"
            android:layout_alignBottom="@+id/chkInspire"
            android:layout_alignRight="@+id/swEnableQuotesNotifications"
            android:layout_alignEnd="@+id/swEnableQuotesNotifications"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp" />

        <CheckBox
            android:text="Love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chkFunny"
            android:layout_marginTop="25dp"
            android:layout_alignLeft="@+id/chkFunny"
            android:layout_alignStart="@+id/chkFunny"
            android:id="@+id/chkLove" />

        <CheckBox
            android:text="Art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chkLove"
            android:layout_marginTop="25dp"
            android:layout_alignLeft="@+id/chkLove"
            android:layout_alignStart="@+id/chkLove"
            android:id="@+id/chkArt" />

        <CheckBox
            android:text="Students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/chkArt"
            android:layout_alignLeft="@+id/chkArt"
            android:layout_alignStart="@+id/chkArt"
            android:id="@+id/chkStudents" />
    </RelativeLayout>
</RelativeLayout>
